@model IEnumerable<ConferenceSystem.Models.Registration>

@{
    ViewData["Title"] = "Index";
}


<h1>Participate</h1>

<a class="button-style" asp-action="Create">Join Now</a>
<a class="button-style" asp-action="Search">Search Event</a>
<p></p>
<h5>[Participant List]</h5>
<p></p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("Event Name")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegistrationId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RegistrationId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegistrationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
